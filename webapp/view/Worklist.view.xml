<mvc:View
	controllerName="opensap.manageproducts.ManageProducts.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:l="sap.ui.layout">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>
					<!--parameters: {-->
					<!--	expand: 'ToSupplier'-->
					<!--}-->
		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/Product',
					sorter: {
						path: 'ProductName',
						descending: false
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search="onSearch"
							width="auto">
						</SearchField>
						<Button id="addButton" icon="sap-icon://add" press="onAdd" tooltip="Add Products"/>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column id="image">
						<Text text="Product" />
					</Column>
					<Column id="nameColumn">
						<Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
					</Column>
					<Column 
						id="descriptionColumn"
						demandPopin="true"
						minScreenWidth="Tablet">
						<Text text="Product Description"/>
					</Column>
					<Column id="categoryColumn"
						demandPopin="false"
						minScreenWidth="Tablet">
						<Text text="Product Category"/>
					</Column>
					<Column id="unitNumberColumn" hAlign="End">
						<Text text="{i18n>tableUnitNumberColumnTitle}" id="unitNumberColumnTitle"/>
					</Column>
					<Column id="buttonColumn" width="15%" minScreenWidth="Tablet" demandPopin="true" popinDisplay="WithoutHeader" hAlign="Right"
						class="sapMTableContentMargin">
						<header>
							<Label id="addToCartLabel" text="{i18n>xfld.addToCart}" visible="{= ${device>/system/phone}}"/>
						</header>
					</Column>
				</columns>
				
				<items>
					<ColumnListItem
						type="Navigation"
						press="onPress">
						<cells>
							<Image src="https://www.bigbasket.com/media/uploads/p/s/{ProductImageFileName}" alt="Image"/>
							<ObjectIdentifier
								title="{ProductName}"/>
								<!--text="{ProductID}"/>-->
							<Text text ="{ProductDescription}"/>
							<Text text="{ProductCategory}"/>
							<ObjectNumber
								number="{
									path: 'Price',
									formatter: '.formatter.numberUnit'
								}"
								unit="PHP"/>
							<Button id="addToCartButton" text="Add to Cart" press="onAddToCartPressed" type="Transparent"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>


	</semantic:SemanticPage>

</mvc:View>